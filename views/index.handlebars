<img src="../public/assets/images/burger.jpg">
<h1>Eat - Da - Burger</h1>
<div id="mainBody">
  <div id="burgerTarget">
    <ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
  </div>
  <div id="form">
    <textarea name="burgerName"></textarea>
    <button type="submit">SUBMIT</button>
    <h6>Enter the burger you want to eat and hit the submit button</h6>
  </div>
  <div id="devourtarget">
   <ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul> 
  </div>
</div>